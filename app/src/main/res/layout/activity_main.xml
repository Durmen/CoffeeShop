<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5c9c182a"
    android:padding="@android:dimen/app_icon_size"
    tools:context=".MainActivity"
    >

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/welcome_text"
    android:textSize="25sp"
    android:textStyle="bold"
    android:textColor="@android:color/holo_green_dark"
    android:layout_marginBottom="20dp"
    />

    <TextView
        android:id="@+id/welcomeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_text"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textSize="22sp"
        android:textColor="@android:color/holo_red_light"
        />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/coffee"
        android:layout_margin="@android:dimen/app_icon_size"
        android:layout_marginBottom="10dp"
        />

    <RadioGroup
        android:id="@+id/raDioGroupID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RadioButton
            android:id="@+id/hotCoffeeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hot_coffee"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            />
        <RadioButton
            android:id="@+id/coldCoffeeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cold_coffee"
            android:textSize="20sp"
            />

    </RadioGroup>

    <Button
        android:id="@+id/showButtonID"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_text"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_light"
        />

    <TextView
        android:id="@+id/resultTextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        />




</LinearLayout>